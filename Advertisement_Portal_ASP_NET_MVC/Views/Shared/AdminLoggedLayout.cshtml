<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/AdminStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Advertisement_Portal_ASP_NET_MVC.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/Graphics/logoTransparent.png" type="image/gif" sizes="16x16" asp-append-version="true" />
</head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <div class="blokTla">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <img src="~/Graphics/logoTransparent.png" width="80" height="70" asp-append-version="true">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-center align-items-center" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="Categories">Kategorie</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="Reports">Zgłoszenia użytkowników</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="Contact">Wiadomości</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="SendNotification">Ogłoszenia</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="AdminAccounts">Konta administracyjne</a>
                            </li>
                            <li class="nav-item">
                                <button class="UniversalButton" style="width: 120px; height: 40px;">Wyloguj</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer>
            <hr>
            <p style="text-align: center; font-size: 14px;">© 2024 Piotr Majchrzak 4TP1</p>
        </footer>
    @await RenderSectionAsync("Scripts", required: false)
</html>
