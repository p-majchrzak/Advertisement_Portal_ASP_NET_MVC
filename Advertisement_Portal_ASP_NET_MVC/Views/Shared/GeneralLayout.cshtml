<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/GeneralStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Advertisement_Portal_ASP_NET_MVC.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/Graphics/logoTransparent.png" type="image/gif" sizes="16x16" asp-append-version="true" />
</head>
<body>
    <header class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <img src="~/Graphics/logoTransparent.png" width="80" height="70" asp-append-version="true">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center align-items-center" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="Home">Jak to działa?</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Contact">Kontakt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Download">Pobierz</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Dodatkowe
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="CompanyData">Dane firmy</a></li>
                            <li><a class="dropdown-item" href="PrivacyPolicy">Polityka prywatności</a></li>
                            <li><a class="dropdown-item" href="/Admin/Login">Admin Panel</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <button class="btn AddButton" onclick="AddAnnouncementButtonNavigation()">Dodaj ogłoszenie</button>
                    </li>
                    <li class="nav-item">
                        <button class="btn FindButton" onclick="FindJobButtonNavigation()">Znajdź prace</button>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </body>
    <hr />
    <footer class="footer footerCenter">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <label class="titleFooter">Dla kandydatów</label><br>
                    <a href="">Logowanie/rejestracja</a><br>
                </div>
                <div class="col-md-4">
                    <label class="titleFooter">Dla firm</label><br>
                    <a href="">Logowanie/rejestracja</a><br>
                </div>
                <div class="col-md-4">
                    <label class="titleFooter">Pozostałe</label><br>
                    <a href="CompanyData">Dane firmy</a><br>
                    <a href="Contact">Kontakt</a><br>
                    <a href="PrivacyPolicy">Polityka prywatności</a><br>
                    <a href="Download">Pobierz aplikację</a><br>
                </div>
            </div>
        </div>
        <hr>
        <center><p>© 2024 Piotr Majchrzak 4TP1</p></center>
    </footer>
    <script src="~/js/Script.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
