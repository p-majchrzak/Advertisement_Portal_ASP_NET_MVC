@{
    Layout = "UserLoggedLayout";
    ViewData["Title"] = "Strona główna";
}
<div class="row">
    <div class="col-0 col-lg-2"></div>
    <div class="col-12 col-lg-8">
        <b class="DarkViolet" style="margin-left: 1.5%;">Wyszukiwarka ofert</b>
        <div class="searchBackground">
            <div class="row searchBorder">
                <input type="text" class="form-control borderSearchBoxLeft" placeholder="Stanowisko">
                <select class="form-control form-select borderSearchBoxCenter">
                    <option>Kategoria</option>
                </select>
                <input type="text" class="form-control borderSearchBoxCenter" placeholder="Lokalizacja">
                <select class="form-control form-select borderSearchBoxRight">
                    <option>+30km</option>
                </select>
            </div>
            <div class="row">
                <select class="form-select searchFilter" style="width: 195px; margin-left: 1.5%;">
                    <option value="1">Poziom stanowiska</option>
                    <option value="1">Poziom stanowiska</option>
                </select>
                <select class="form-select searchFilter" style="width: 160px;">
                    <option value="1">Rodzaj umowy</option>
                </select>
                <select class="form-select searchFilter" style="width: 155px;">
                    <option value="1">Wymiar pracy</option>
                </select>
                <select class="form-select searchFilter" style="width: 130px;">
                    <option value="1">Tryb pracy</option>
                </select>
                <button class="searchButton">Szukaj</button>
            </div>
        </div>
    </div>
    <div class="col-0 col-lg-2"></div>
</div>

<div class="row">
    <div class="col-0 col-lg-2"></div>
    <div class="col-12 col-lg-8 DarkViolet">
        <hr>
        <center>
            <h1 style="margin-top: 40px; font-size: 45px;">Najnowsze oferty</h1>
            <p>Poniżej znajdziesz najnowsze oferty udostępnione przez firmy korzystające z naszej platformy.</p>
        </center>
    </div>
    <div class="col-0 col-lg-2"></div>
</div>
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="row">
            <!--Kod generowany z backendu-->
            <div class="col-sm-4" style="margin-bottom: 2px;">
                <div class="card" style="background-color: rgb(248, 248, 248); margin-bottom: 10px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <center>
                                    <img src ="~/Graphics/logoTransparent.png" width="70px" height="70px" style="border-radius: 100%; border: #40356F 1px solid;">
                                </center>
                            </div>
                            <div class="col-9">
                                <h5 class="card-title">PROGRAMISTA C#</h5>
                                <p class="card-text">Nie posiada żadnego profesjonalnego doświadczenia w zakresie programowania wszelakiego rodzaju aplikacji.</p>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-4">
                                <center><button class="UniversalButton" style="width: 95%;">Zobacz firmę</button></center>
                            </div>
                            <div class="col-4">
                                <center><button style="background-color: #665D8C; border: #665D8C;margin: auto; width: 95%;" class="UniversalButton">Zobacz ofertę</button></center>
                            </div>
                            <div class="col-4">
                                <div class="navbar navbar-expand-lg" style="background-color: rgb(248, 248, 248);">
                                    <ul class="navbar-nav">
                                        <li class="nav-item dropdown">
                                            <a style="margin: auto;" class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Opcje
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item">Aplikuj</a></li>
                                                <li><a class="dropdown-item">Zapisz ofertę</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Koniec-->
        </div>
    </div>
</div>

<center><button class="MoreButton">Pokaż więcej ➔</button></center>

<div class="row">
    <div class="col-12 col-lg-12 DarkViolet">
        <center>
            <h1 style="margin-top: 40px; font-size: 45px;">Popularne firmy korzystające z naszej strony</h1>
        </center>
        <!--Poczatek-->
        <div class="row">
            <div class="col-sm-4" style="margin-bottom: 2px;">
                <div class="card" style="background-color: rgb(248, 248, 248); margin-bottom: 10px;">
                    <div class="card-body">
                        <div>
                            <center>
                                <img src="~/Graphics/logoTransparent.png" width="50px" height="50px">
                                <h3>Microsoft</h3>
                                <p>Lider na rynku wsrod ask;FNe's;dg;nsdg;msldmgsmlDGMLSDM</p>
                                <button class="ShowFirmButton">Zobacz profil firmy ➔</button>
