@{
    Layout = "FirmLayout";
    ViewData["Title"] = "Odzyskaj hasło";
}
<div class="row">
    <div class="col-md-6 leftSiteLogin loginPosition">
        <h1 class="centerText" style="color: #40356F; margin-top: auto; margin-bottom: auto;">Zaloguj jako użytkownik</h1>
    </div>
    <div class="col-md-6 loginPosition">
        <img class="loginPhoto" src="~/Graphics/logoTransparent.png" asp-append-version="true"><br>
        <h3>Odzyskaj hasło firma</h3>
        <form class="formStyle">
            <div class="mb-3">
                <input placeholder="Podaj email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <button type="submit" class="UniversalButton" style="width: 100%; height: 40px; border-radius: 5px;">Odzyskaj hasło</button>
        </form>
        <button type="submit" class="UniversalButton BackButton">Wróć na stronę główną</button><br><br>
        <label>© 2024 Piotr Majchrzak 4TP1</label>
    </div>
</div>